<form method="post" action="{{ path('admin_tag_deleteTag', {'id': tag.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
    <button class="d-block mx-auto my-3 btn btn-danger">{% trans %}Supprimer{% endtrans %}</button>
</form>
