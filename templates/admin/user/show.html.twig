{% extends 'admin/baseAdmin.html.twig' %}

{% block title %} {{ parent() }}-{{ user.email }} {% endblock %}

{% block body %}
    <h1 class="text-center"> {% trans %}Détails de l'utilisateur {% endtrans %} </h1>

    <table class="wrapper border border-2">
        <tbody>
            <tr>
                <th class="px-5 py-2">Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">Adresse n°1</th>
                <td>{{ user.adress1 }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">Adresse n°2</th>
                <td>{{ user.adress2 }}</td>
            </tr>
            <tr>
            <tr>
                <th class="px-5 py-2">Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
                <th class="px-5 py-2">VerifiedMail</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

 <div class="d-flex justify-content-center">
    <a class="d-inline my-2 mx-2 btn btn-primary" href="{{ path('admin_user_index') }}">{% trans %}Retour à la liste des utilisateurs{% endtrans %}</a>

    <a class="d-inline my-2 mx-2 btn btn-warning" href="{{ path('admin_user_edit', {'id': user.id}) }}">{% trans %}Modifier{% endtrans %}</a>


    {{ include('admin/user/_delete_form.html.twig') }}
</div>


{% endblock %}
