{% set route_name = app.request.attributes.get('_route') %}
<nav class="navbar navbar-expand-lg navbar-dark bg-info bg-transparent sticky-top">
  <div class="container-fluid">

    <a class="navbar-brand" href="/"><img src="/upload/byeblues.png" alt="logo bye blues" width="150" ></a>

