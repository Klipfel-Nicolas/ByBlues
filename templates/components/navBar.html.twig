      </li>

        <li {% if route_name matches '{^about}' %} class="nav-item active" {% else %} class="nav-item" {% endif %}>
          <a class="nav-link" href="{{ path('about') }}">{% trans %}A Propos{% endtrans %}</a>
        </li>

        <li {% if route_name matches '{^blog}' %} class="nav-item active" {% else %} class="nav-item" {% endif %}>
          <a class="nav-link" aria-current="page" href="{{ path('blog') }}">{% trans %}Blog{% endtrans %}</a>
        </li>

        <li {% if route_name matches '{^shop}' %} class="nav-item active" {% else %} class="nav-item" {% endif %}>
          <a class="nav-link" href="{{ path('shop_index') }}">{% trans %}Boutique{% endtrans %}</a>
        </li>

      {% if app.user %}
          <li {% if route_name matches '{^user_account}' %} class="nav-item active" {% else %} class="nav-item" {% endif %}>

              <a class="nav-link" aria-current="page" href="{{ path('user_account', {'slug': app.user.slug}) }}">
                <svg xmlns="http://www.w3.org/2000/svg" id="Outline" viewBox="0 0 512 512" width="512" height="512">
                  <path d="M68.169,447.023C71.835,449.023,159.075,496,256,496c105.008,0,184.772-47.134,188.116-49.14A8,8,0,0,0,448,
