{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}{{ parent() }}-{{ item.name }} {% endblock %}

{% block body %}
    <h1 class="text-center"> {% trans %}Détails de l'article {% endtrans %} </h1>

    <table class="wrapper border border-2">
        <tbody>
            <tr>
                <th class="px-5 py-2">Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %} Nom du produit{% endtrans %}</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %} Image du produit {% endtrans %}</th>
                {% for image in images %}
                   <td>
                        <img class="d-block img-fluid border border-primary w-50" src='/uploads/items/{{ image.path }}' alt='image produit'/>
                   </td>
                {% endfor %}
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %} Prix{% endtrans %}</th>
                <td>{{ item.price }} € </td>
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %} Affiché par jour {% endtrans %}</th>
                <td>{{ item.displayPerDay }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %} Quantité disponibles {% endtrans %}</th>
                <td>{{ item.quantityAviable }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %} En commande {% endtrans %}</th>
                <td>{{ item.isPreOrder ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th class="px-5 py-2">{% trans %} Description{% endtrans %}</th>
                <td>{{ item.description }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex justify-content-center">
    <a class="d-inline my-3 mx-3 btn btn-primary" href="{{ path('admin_item') }}">{% trans %}Retour à la liste des produits{% endtrans %}</a>

    <a class="d-inline my-3 mx-3 btn btn-warning" href="{{ path('admin_item_edit', {'id': item.id}) }}">{% trans %}Modifier{% endtrans %}</a>

    {{ include('admin/produit/_delete_form.html.twig') }}
</div>
{% endblock %}
