      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse  justify-content-end fs-5" id="navbarNav">
      <ul class="navbar-nav text-center">
      {% if isAdmin(app.user) %}
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="{{ path('admin_index') }}">{% trans %}Page admin{% endtrans %}</a>
        </li>
      {% endif %}

      <li {% if route_name matches '{^product}' %} class="nav-item active" {% else %} class="nav-item" {% endif %}>
